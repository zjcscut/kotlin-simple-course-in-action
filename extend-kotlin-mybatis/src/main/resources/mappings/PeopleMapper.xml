<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.throwable.kotlin.mybatis.mapper.PeopleMapper">

    <select id="findByLastName" resultType="org.throwable.kotlin.mybatis.entity.People">
      SELECT * FROM people WHERE last_name = #{lastName}
    </select>

</mapper>